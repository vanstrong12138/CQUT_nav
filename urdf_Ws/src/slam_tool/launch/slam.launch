<launch>
    <!-- 设置地图的配置文件 -->
    <arg name="map" default="rmuc_map_draw.yaml" />
    <!-- 运行地图服务器，并且加载设置的地图-->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find slam_tool)/map/$(arg map)"/>
    <!-- 启动AMCL节点 -->
    <include file="$(find slam_tool)/launch/amcl.launch" />

    <!-- 运行move_base节点 -->
    <include file="$(find slam_tool)/launch/movebase.launch" />

</launch>
